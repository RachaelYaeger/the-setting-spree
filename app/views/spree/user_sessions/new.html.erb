<% @body_id = 'login' %>
<div class="col-md-6 <%= request.path == spree.login_path ? "col-md-offset-3" : "" %>">
  <div class="panel panel-default">
    <div class="panel-heading login-heading">
      <h3><%= link_to 'Join Now', spree.signup_path %></h3>
      <h3 class="active-tab">Sign In</h3>
    </div>
    <div class="login-line"></div>
      <div id="existing-customer" class="panel-body login-body" data-hook="login">
          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>
          <%= render :partial => 'spree/shared/login' %>
