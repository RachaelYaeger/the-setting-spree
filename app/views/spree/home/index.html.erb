<div id="space-holder"></div>

<%= render 'header' %>
<div id="splash-background"></div>
<div id="main-container">

  <section id="splash">
    <div class="splash-text centered">
      <h2 class="mobile-only">Welcome to The Setting!</h2>
      <p>The Setting is a collection of handmade ceramic tableware inspired by the memories shared while entertaining friends and family at home. To us, there is nothing more important than spending time with the people who matter most and no better way to do so than over a beautifully created setting.</p>
    </div>
    <div class="expand centered">
      <em><a href="#products-section">Shop the Collection</a></em>
    </div>
  </section>
  
  <section id="products-section">
    <a class="anchor" name="product-section"></a>
    <h2 id="products-title">Tides Collection</h2>
    <h5>Inspired by the Moon &amp; Sea</h5>
    <div data-hook="homepage_products">
      <% cache(cache_key_for_products) do %>
        <%= render :partial => 'spree/shared/products', :locals => { :products => @products } %>
      <% end %>
    </div>
  </section>

  <section id="studio">
    <a class="anchor" name="studio-section"></a>
    <h2>Studio</h2>
    <div class="slickness">
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-01.jpg" alt="slider-image-1"></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-02.jpg" alt="slider-image-2"></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-03.jpg" alt=""></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-04.jpg" alt=""></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-05.jpg" alt=""></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-06.jpg" alt=""></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-07.jpg" alt=""></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-08.jpg" alt=""></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-09.jpg" alt=""></div>
      <div><img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/studio-slide-10.jpg" alt=""></div>
    </div>
    <p class="subtext centered">Our studio includes a test kitchen bustling with freshly baked goods and special fare for our private events, appointments, and spontaneous gatherings.</p>
    <div class="expand centered">
      <em><a href="javascript:showInquiry()">Make an inquiry</a></em>
    </div>
  </section>

  <section id="inquiry" class="hidden">
    <a class="anchor" name="inquiry-section"></a>
    <div class="close-inquiry x-icon">×</div>
    <div class="form-container insert">
      <h2>Make an Inquiry</h2>
      <%= form_for Inquiry.new, url: "/inquiries" do |f| %>
      <%= f.text_field :name, placeholder: "Name", tabindex: "1" %>
      <%= f.text_field :email, placeholder: "Email", tabindex: "2" %>
      <%= f.text_field :datetime, placeholder: "Date + Time", tabindex: "3" %>
      <%= f.text_field :budget, placeholder: "Budget", tabindex: "4" %>
      <%= f.text_area :message, placeholder: "Message", tabindex: "5" %>
      <!-- Hidden field receives value trough user's selection in the dd dropdown menu -->
      <%= f.hidden_field :customer_type %>
      <div id="dd" class="wrapper-dropdown" tabindex="6">
        <span>Brand or Individual</span>
        <ul class="dropdown">
          <li><a href="javascript:void(0)">Brand</a></li>
          <li><a href="javascript:void(0)">Individual</a></li>
        </ul>
      </div>
      <%= f.submit %>
      <% end %>
    </div>
  </section>

  <section id="about">
    <a class="anchor" name="about-section"></a>
    <h2>About</h2>
    <img src="https://s3.amazonaws.com/the-setting-staging.herokuapp.com/spree/general-images/about_1.png" alt="about-image">
    <div class="expand centered">
      <em>The Setting is the backdrop and the foundation of every experience</em>
    </div>
    <p class="subtext">The Setting is a curated destination to explore &amp; purchase accents for the spaces in which we live, work, eat and entertain.</p>
    <p class="subtext">Located in Soho, New York, The Setting’s studio hosts intimate gatherings to celebrate unique experiences alongside our one of a kind products.</p>

  </section>

  <section id="insta-feed">
    <a class="anchor" name="instagram-section"></a>
    <h2>@thesettingnyc</h2>
    <div id="insta-images-container">
      <% Instagram.images.each do |image| %>
        <%= image_tag image, class: 'insta-img' %>
      <% end %>
    </div>
<!--     <div class="expand centered">
      <em><a href="#">Show More</a></em>
    </div> -->
  </section>

</div> <!-- Closes Main Container div -->
 
<%= render 'footer' %> 

